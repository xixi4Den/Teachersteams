<div class="container-fluid">
    <div class="row">
        <div class="btn-group">
            <button type="button" class="btn btn-default">All</button>
            <button type="button" class="btn btn-default">Active</button>
            <button type="button" class="btn btn-default">Completed</button>
        </div>
        <button class="btn btn-default btn-info pull-right">Add Group</button>
    </div>
    <div class="row tt-groups-content">
        <div class="col-md-3 col-sm-3 col-xs-3 tt-groups">
            <div class="list-group">
                <a ng-repeat="group in groups" href="#" class="list-group-item">{{ group }}</a>
            </div>
            <ul class="pager">
                <li><a href="#">&larr;</a></li>
                <li><a href="#">&rarr;</a></li>
            </ul>
        </div>
        <div class="col-md-9 col-sm-9 col-sx-9">
            <uib-tabset>
                <uib-tab heading="Info"></uib-tab>
                <uib-tab heading="Students"></uib-tab>
                <uib-tab heading="Teachers"></uib-tab>
                <uib-tab heading="Tasks"></uib-tab>
            </uib-tabset>
        </div>
    </div>
</div>
