@using Teachersteams.Presentation.Helpers
@using Teachersteams.Presentation.Resources

@{
    string area = Html.GetViewDataValue("Area");
}

<tabset>
    <tab title="@Resource.GroupInfoTabTitle" template-url="@Url.Action("InfoTab", "Group" , new { area = area})"></tab>
    <tab title="@Resource.GroupStudentsTabTitle" template-url="@Url.Action("StudentsTab", "Group", new { area = area })"></tab>
    <tab title="@Resource.GroupTeachersTabTitle" template-url="@Url.Action("TeachersTab", "Group", new { area = area })"></tab>
    <tab title="@Resource.GroupAssignmentsTabTitle" template-url="@Url.Action("AssignmentsTab", "Group" , new { area = area})"></tab>
</tabset>
