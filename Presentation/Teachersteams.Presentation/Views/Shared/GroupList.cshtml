@{
    string ngController = ViewData.ContainsKey("NgController") ? ViewData["NgController"].ToString() : string.Empty;
    string ngItemUiSref = ViewData.ContainsKey("NgItemUiSref") ? ViewData["NgItemUiSref"].ToString() : string.Empty;
}

<div class="tt-group-list" ng-controller="@ngController">
    <div class="list-group tt-group-items">
        <a ng-repeat="group in groups"
           ui-sref="@ngItemUiSref"
           class="list-group-item tt-group-item scale-animation">{{ group.Title }}</a>
    </div>
    <ul class="pager">
        <li><a href="#" ng-click="previous()">&larr;</a></li>
        <li><a href="#" ng-click="next()">&rarr;</a></li>
    </ul>
</div>