@using Teachersteams.Presentation.Resources

<nav ng-controller="ttNavigationCompositeController" class="navbar navbar-default navbar-fixed-top tt-navbar">
    <div class="container"
         ng-intro-options="introOptions"
         ng-intro-method="startIntro"
         ng-intro-autostart="false"
         ng-intro-autorefresh="true"
         ng-intro-onbeforechange="beforeChange">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" ng-click="isCollapsed = !isCollapsed">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand tt-brand" href="#/page1">@Resource.SiteHeaderText</a>
        </div>
        <div class="navbar-collapse" ng-class="isCollapsed ? 'collapse' : 'in'">
            <ul class="nav navbar-nav tt-nav" ng-if="isTeacher" ng-controller="ttNavigationControllerForTeacher">
                <li ui-sref-active="active" class="tt-groups-nav-tab"><a ui-sref="teacher/groups">@Resource.GroupsTabTitle</a></li>
                <li ui-sref-active="active" class="tt-board-nav-tab"><a ui-sref="teacher/board">@Resource.BoardTabTitle</a></li>
                <li ui-sref-active="active" class="tt-notifications-nav-tab">
                    <a ui-sref="teacher/notifications">
                        @Resource.NotificationsTabTitle
                        <span ng-if="isNotificationsBudgeVisible()" ng-bind="notificationsCount" class="badge"></span>
                    </a>
                </li>
                <li ui-sref-active="active"><a href ng-click="startIntro();">@Resource.AboutTabTitle</a></li>
            </ul>
            <ul class="nav navbar-nav tt-nav" ng-if="!isTeacher" ng-controller="ttNavigationControllerForStudent">
                <li ui-sref-active="active" class="tt-groups-nav-tab"><a ui-sref="student/groups">@Resource.GroupsTabTitle</a></li>
                <li ui-sref-active="active" class="tt-board-nav-tab"><a ui-sref="student/board">@Resource.BoardTabTitle</a></li>
                <li ui-sref-active="active" class="tt-notifications-nav-tab">
                    <a ui-sref="student/notifications">
                        @Resource.NotificationsTabTitle
                        <span ng-if="isNotificationsBudgeVisible()" ng-bind="notificationsCount" class="badge"></span>
                    </a>
                </li>
                <li ui-sref-active="active"><a href ng-click="startIntro();">@Resource.AboutTabTitle</a></li>
            </ul>
            <form class="navbar-form navbar-right tt-switch-user-mode">
                <span>@Resource.StudentSwitchLabel</span>
                <input type="checkbox" ng-model="$parent.$parent.$parent.isTeacher" ui-switch="{color: '#FFF', secondaryColor: '#56789C'}" class="js-switch" />
                <span>@Resource.TeacherSwitchLabel</span>
            </form>
        </div>
    </div>
</nav>