<div class="container-fluid">
    <div class="page-header">
        <h1>Groups <small>where you are teacher</small></h1>
    </div>
    <div class="row">
        <button class="btn btn-default btn-info pull-right" ng-click="createGroup()">Create Group</button>
    </div>
    <div class="row tt-groups-content">
        <div class="col-md-3 col-sm-3 col-xs-3">
            <div class="tt-group-list" ng-controller="ttGroupListController">
                <div class="list-group tt-group-items">
                    <a ng-repeat="group in groups"
                       ui-sref="teacher/groups.details({ groupId: group.Id })"
                       class="list-group-item tt-group-item scale-animation">{{ group.Title }}</a>
                </div>
                <ul class="pager">
                    <li><a href="#" ng-click="previous()">&larr;</a></li>
                    <li><a href="#" ng-click="next()">&rarr;</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-9 col-sm-9 col-sx-9">
            <div ui-view class="tt-group-details scale-animation"></div>
        </div>
    </div>
</div>
