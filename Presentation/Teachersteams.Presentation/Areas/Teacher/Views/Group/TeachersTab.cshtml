@using Teachersteams.Presentation.Resources

<section ng-controller="ttGroupTeachersTabController" class="tt-tab-content">
    <div class="row invite-user-row">
        <button class="btn btn-info" ng-click="invite()">@Resource.InviteButtonLabel</button>
    </div>
    <div class="row">
        <div id="teachersGrid" ui-grid="gridOptions" ui-grid-pagination class="grid"></div>
    </div>
</section>

<script type="text/ng-template" id="photo-template">
    <div class="ui-grid-cell-contents">
        <img ng-src="{{row.entity.Photo}}" width="40" />
    </div>
</script>

<script type="text/ng-template" id="actions-template">
    <div class="ui-grid-cell-contents">
        <button class="btn btn-info" ng-show="isApproved(row)" ng-click="grid.appScope.test(grid, row)"><span class="glyphicon glyphicon-flag"></span></button>
        <button class="btn btn-danger" ng-show="isApproved(row)" ng-click="grid.appScope.test(grid, row)"><span class="glyphicon glyphicon-trash"></span></button>
    </div>
</script>
